generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  INSPECTORIA
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Postulante {
  id               String   @id @default(uuid())
  nro              Int?
  unidad           String
  codPreinsc       String   @unique
  nombrePostulante String
  ci               String
  fuenteArchivo    String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([ci])
  @@index([unidad])
}
